@*@if (Session["TenDangNhap"] == null && Session["MatKhau"] == null)
    {

        Response.Redirect("~/Admin/Login");
    }*@


@using (Html.BeginForm("AddAction", "NXB"))
{
    <ul id="tabsmenu" class="tabsmenu">
        <li class="active"><a href="#tab1">Thêm </a></li>
    </ul>
    <div id="tab1" class="tabcontent">

        <div class="form">
           @{
               if(@Session["Ok"] ==null)
            {
                <div class="form_row">
                    <label>Tên nhà xuất bản:</label>
                    <input type="text" class="form_input" name="TenNXB" id="TenNXB" value="" />
                    <span>
                        @ViewBag.msg_err
                        @Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "error" })
                    </span>
                </div>

                <div class="form_row">
                    <label>SĐT :</label>
                    <input type="text" class="form_input" name="SDT" id="SDT" value="" />
                    <span>@Html.ValidationMessageFor(model => model.SDT, "", new { @class = "error" })</span>
                </div>

                <div class="form_row">
                    <label>Địa chỉ : </label>
                    <textarea class="form_textarea" name="DiaChi" id="DiaChi"></textarea>
                    <span>@Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "error" })</span>
                </div>
            }

            else
            {
                    @*<div class="form_row">

                        @Html.HiddenFor(model => model.MaNXB)
                    </div>*@

                    <div class="form_row">
                        <label>Tên NXB:</label>
                        @Html.EditorFor(model => model.TenNXB, new { @class = "form_input" })
                        <span>@Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "error" })</span>
                    </div>

                    <div class="form_row">
                        <label>SĐT:</label>
                        @Html.EditorFor(model => model.SDT, new { @class = "form_input" })
                        <span>@Html.ValidationMessageFor(model => model.SDT, "", new { @class = "error" })</span>
                    </div>

                    
                    <div class="form_row">
                        <label>Địa chỉ:</label>
                        @Html.EditorFor(model => model.DiaChi, new { @class = "form_textarea" })
                        <span>@Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "error" })</span>
                    </div>
            }
           } 

            <div id="btn-submit">
                <input type="submit" class="form_submit" value="Thêm" />
            </div>

            <div class="clear"></div>
        </div>
    </div>
}