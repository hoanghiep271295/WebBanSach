@model ShopOnline.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}


    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
   
    <link href="~/Content/cssLogin/normalize.css" rel="stylesheet" />
    <link href="~/Content/cssLogin/styleLoginKH.css" rel="stylesheet" />
    <link href="~/Content/css/shopping-cart.css" rel="stylesheet" />


<body>
   @{
       if (@ViewBag.dangky!=null)
       {
           <div class="cartempty"><i class="fa fa-lightbulb-o fa-2x" aria-hidden="true"></i>
                @ViewBag.dangky <i class="fa fa-smile-o" aria-hidden="true"></i>
            </div>
       }
   }
    
    <div class="logmod">
        <div class="logmod__wrapper">
            @*<span class="logmod__close">Close</span>*@
            <div class="logmod__container">
                <ul class="logmod__tabs">
                    <li data-tabtar="lgm-2"><a href="#">Đăng nhập</a></li>
                    
                </ul>
                <div class="logmod__tab-wrapper">
                        <div class="logmod__tab lgm-2">
                            <div class="logmod__heading">
                                <span class="logmod__heading-subtitle">* Nhập thông tin <strong>để đăng nhập</strong></span>
                            </div>
                            <div class="logmod__form">
                                @using (Html.BeginForm("LoginAction", "KhachHangLogin", FormMethod.Post))
                                {
                                   @ViewBag.Error 
                                    if (@Session["TenDangNhapKH"] == null && @Session["MatKhauKH"]==null)
                                    {
                                        <div class="sminputs">
                                            <div class="input full">
                                                <label class="string optional" for="user-name">Tên đăng nhập *</label>
                                                <input class="string optional" id="TenDangNhap" name="TenDangNhap" placeholder="Tên đăng nhập" type="text" size="50" />
                                                <span>@Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "special" })</span>
                                            </div>
                                        </div>
                                        <div class="sminputs">
                                            <div class="input full">
                                                <label class="string optional" for="user-pw">Mật khẩu *</label>
                                                <input class="string optional" id="MatKhau" name="MatKhau" placeholder="Mật khẩu" type="password" size="50" />
                                                <span class="hide-password">Show</span>
                                                <span>@Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "special" })</span>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="sminputs">
                                            <div class="input full">
                                                <label class="string optional" for="user-name">Tên đăng nhập *</label>
                                                <input class="string optional" id="TenDangNhap" name="TenDangNhap" placeholder="Tên đăng nhập" type="text" size="50" value="@Session["TenDangNhapKH"]" />
                                                <span>@Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "special" })</span>
                                            </div>
                                        </div>
                                        <div class="sminputs">
                                            <div class="input full">
                                                <label class="string optional" for="user-pw">Mật khẩu *</label>
                                                <input class="string optional" id="MatKhau" name="MatKhau" placeholder="Mật khẩu" type="password" size="50" value="@Session["MatKhauKH"]" />
                                                <span class="hide-password">Show</span>
                                                <span>@Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "special" })</span>
                                            </div>
                                        </div>
                                    }
                                    
                                    
                                    <div class="simform__actions">
                                        <input class="sumbit" name="commit" type="submit" value="Đăng nhập" />
                                        <span class="simform__actions-sidetext"><a class="special" role="link" href="#">Quên mật khẩu?</a></span>
                                    </div>
                                }
                                <div class="simform__actions">
                                    <div class="dangky"><span class="logmod__heading-subtitle">* Chưa có tài khoản ?<a href="@Url.Action("DangKyKH","KhachHangLogin")"> <strong>Đăng ký</strong></span></a></div>
                                </div>
                        
                    </div>
                   
                    
                </div>
            </div>
        </div>
    </div>
 </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script src="~/Scripts/jsLogin/index.js"></script>



</body>

